<h2>Resend unlock instructions</h2>

<%= form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post , :class => "form-horizontal"}) do |f| %>
<fieldset>
  <%= devise_error_messages! %>

  <div class="control-group"><%= f.label :email, :class=>"control-label" %>
    <div class="controls">
  <%= f.email_field :email %></div>
  </div>

  <div class="form-actions"><%= f.submit "Resend unlock instructions" , :class => "btn btn-success"%></div>
  </fieldset>
<% end %>

<%= render "devise/shared/links" %>
